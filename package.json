{
  "name": "schalkneethling.com",
  "version": "1.0.0",
  "description": "My personal blog",
  "type": "module",
  "exports": "./src/index.ts",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build:platform": "tsc",
    "build:content": "node ./lib/index.js",
    "build": "yarn build:platform && yarn build:content && cp -R ./assets ./public/",
    "style:build": "yarn style-dictionary build",
    "test": "yarn build && NODE_OPTIONS=--experimental-vm-modules jest",
    "test:dev": "NODE_OPTIONS=--experimental-vm-modules jest --watch"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/schalkneethling/schalkneethling.me.git"
  },
  "keywords": [
    "blog",
    "nodejs",
    "javascript",
    "markdown"
  ],
  "author": "Schalk Neethling",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/schalkneethling/schalkneethling.me/issues"
  },
  "homepage": "https://github.com/schalkneethling/schalkneethling.me#readme",
  "dependencies": {
    "dotenv": "^10.0.0",
    "gray-matter": "^4.0.3",
    "typescript": "^4.5.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@babel/preset-typescript": "^7.16.0",
    "@types/jest": "^27.0.3",
    "@types/klaw-sync": "^6.0.1",
    "@types/marked": "^4.0.1",
    "@types/node": "^16.11.10",
    "babel-jest": "^27.3.1",
    "cheerio": "^1.0.0-rc.10",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "fs-extra": "^10.0.0",
    "jest": "^27.3.1",
    "klaw-sync": "^6.0.0",
    "marked": "^4.0.5",
    "mock-fs": "^5.1.2",
    "prettier": "^2.5.0",
    "sass": "^1.43.5",
    "style-dictionary": "^3.0.3",
    "stylelint": "^13.13.1",
    "stylelint-a11y": "^1.2.3",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^3.21.0"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  }
