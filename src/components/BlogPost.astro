---
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"posts">;
}
const { post } = Astro.props;
const formattedDate = new Date(post.data.pubDate).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<li class="card card-blog-post">
  <article>
    <header>
      <h3 class="card-title">
        <a href={`/posts/${post.slug}/`}>{post.data.title}</a>
      </h3>
      <p class="card-pubdate">
        This post was published on <time datetime={post.data.pubDate.toISOString()}
          >{formattedDate}</time
        >
      </p>
    </header>
    <p>{post.data.description}</p>
  </article>
</li>
