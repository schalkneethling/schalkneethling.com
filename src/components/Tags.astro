---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<ul class="reset-list tags">
  {
    tags.map((tag) => (
      <li class="tag">
        <a href={`/tags/${tag}`}>{tag}</a>
      </li>
    ))
  }
</ul>

<style>
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--size-8, 0.5rem);
  }

  .tag a {
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-default, 0.5rem);
    color: var(--color-text);
    display: inline-block;
    font-size: var(--typography-size-small, 0.875rem);
    padding-block: var(--size-4, 0.25rem);
    padding-inline: var(--size-12, 0.75rem);
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .tag a:hover,
  .tag a:focus {
    background-color: var(--color-accent);
    border-color: var(--color-accent);
    color: var(--color-surface-elevated);
    transform: translateY(-1px);
  }

  .tag a:focus {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
  }
</style>
